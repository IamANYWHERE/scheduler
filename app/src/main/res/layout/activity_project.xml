<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context=".ui.activity.ProjectActivity">
    <android.support.v7.widget.Toolbar
        android:id="@+id/project_toolbar"
        android:layout_width="match_parent"
        android:layout_height="?android:attr/actionBarSize"
        android:background="@color/color_yellow"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
        app:title="@string/project_toolbar"
        />


    <android.support.v4.view.ViewPager
        android:id="@+id/vPager"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/project_view_pager_height"
        android:layout_gravity="center"
        android:layout_weight="1.0"
        android:background="@color/md_white_1000"
        android:flipInterval="@dimen/project_view_pager_flip_interval"
        android:persistentDrawingCache="animation" />



    <com.jpeng.jptabbar.JPTabBar
        android:id="@+id/tabbar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/project_tabbar_height"
        android:background="@color/md_white_1000"
        />

</LinearLayout>