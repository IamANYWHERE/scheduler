<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_mobile_memory"
    android:layout_width="match_parent"
    android:layout_height="70dp"
    android:layout_marginTop="30dp"
    android:background="@color/md_white_1000"
    android:padding="10dp">

    <TextView
        android:id="@+id/spring_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="15dp"
        android:layout_toEndOf="@+id/imageView1"
        android:layout_toRightOf="@+id/imageView1"
        android:text="冲刺1"
        android:textColor="@color/md_grey_900"
        android:textSize="16dp"/>

    <TextView
        android:id="@+id/spring_deadline"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="2017.12.30"
        android:layout_toRightOf="@+id/imageView1"
        android:layout_below="@+id/spring_name"
        />

    <ImageView
        android:id="@+id/imageView1"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:src="@drawable/rc_ac_ram_icon"/>


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:hint="@string/submitModify"
        android:id="@+id/sprint_button"
        android:textColor="@color/goRegister"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        style="@style/Widget.AppCompat.Button.Borderless"/>

</RelativeLayout>