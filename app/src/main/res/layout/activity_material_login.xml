<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@drawable/bg"
                android:id="@+id/material_login_layout">


    <android.support.v7.widget.CardView
        android:layout_width="@dimen/login_card_width"
        android:layout_height="@dimen/login_card_height"
        app:cardCornerRadius="@dimen/login_card_radius"
        app:cardElevation="@dimen/login_card_elevation"
        app:cardUseCompatPadding="true"
        android:layout_centerInParent="true"
        android:id="@+id/cv">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_marginTop="@dimen/login_title_margin_top"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_title_height">
                <View
                    android:layout_alignParentStart="true"
                    android:layout_width="@dimen/login_title_view_width"
                    android:layout_height="match_parent"
                    android:background="@color/color_login_title_view"
                    />
                <TextView
                    android:layout_centerVertical="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/login_title_text_margin_start"
                    android:text="@string/login"
                    android:textColor="@color/color_login_title_text"
                    android:textSize="@dimen/login_title_text_size"
                    android:textStyle="bold"
                    />
            </RelativeLayout>
            <LinearLayout
                android:layout_marginTop="@dimen/login_name_margin_top"
                android:paddingStart="@dimen/login_name_padding_start"
                android:paddingEnd="@dimen/login_name_padding_end"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_name_height">
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/color_login_name_text_color_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textSize="@dimen/login_name_edit_size"
                        android:hint="@string/Username"
                        android:textColor="@color/color_login_name_edit_text_color"
                        android:id="@+id/et_username"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPersonName"
                        android:background="@drawable/selector_bg_edit"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:paddingBottom="@dimen/login_name_padding_bottom"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <LinearLayout
                android:paddingStart="@dimen/login_pwd_padding_start"
                android:paddingEnd="@dimen/login_pwd_padding_end"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_pwd_height">
                <android.support.design.widget.TextInputLayout
                    android:textColorHint="@color/color_login_name_text_color_hint"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <EditText
                        android:textSize="@dimen/login_pwd_edit_text_size"
                        android:hint="@string/Password"
                        android:textColor="@color/color_login_pwd_edit_text_color"
                        android:id="@+id/et_password"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:inputType="textPassword"
                        android:background="@drawable/selector_bg_edit"
                        android:textCursorDrawable="@drawable/bg_input_cursor"
                        android:paddingBottom="@dimen/login_pwd_edit_padding_bottom"
                        />
                </android.support.design.widget.TextInputLayout>
            </LinearLayout>
            <RelativeLayout
                android:layout_marginTop="@dimen/login_button_layout_margin_top"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/login_button_layout_height">
                <Button
                    android:id="@+id/bt_go"
                    android:background="@drawable/bt_shape"
                    android:stateListAnimator="@drawable/state_list_animator_z"
                    android:layout_width="150dp"
                    android:layout_height="50dp"
                    android:text="@string/go"
                    android:textColor="@color/color_login_button_text_color"
                    >
                </Button>
            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:fabSize="normal"
        android:src="@drawable/plus"
        android:transitionName="loginFab"
        android:layout_alignTop="@id/cv"
        android:layout_marginTop="@dimen/login_fab_margin_top"
        android:layout_alignEnd="@id/cv"
        android:layout_marginEnd="@dimen/login_fab_margin_end"

        />


</RelativeLayout>

